<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="create-cats-table" author="skanash">
        <preConditions>
            <not>
                <tableExists tableName="cats"/>
            </not>
        </preConditions>

        <createTable tableName="cats">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="breed" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

        </createTable>

        <!--  <createIndex tableName="cats" indexName="IDX_CATS">
              <column name="date_time"/>
          </createIndex>-->
    </changeSet>


    <changeSet id="create-dogs-table" author="skanash">
        <preConditions>
            <not>
                <tableExists tableName="dogs"/>
            </not>
        </preConditions>

        <createTable tableName="dogs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="breed" type="varchar(255)">
                <constraints nullable="true"/>
            </column>

        </createTable>
        <!--<createIndex tableName="dogs" indexName="IDX_DOGS">
            <column name="date_time"/>
        </createIndex>-->
    </changeSet>
</databaseChangeLog>
