<?xml version="1.0" encoding="UTF-8"?>
 <databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

 <changeSet id="animal-table" author="skanash">
  <preConditions>
   <not>
    <tableExists tableName="animal"/>
   </not>
  </preConditions>
  <createTable tableName="animal">
   <column name="id" type="BIGINT" autoIncrement="true">
    <constraints primaryKey="true" />
   </column>
   <column name="name" type="varchar(255)">
    <constraints nullable="false"/>
   </column>
   <column name="type_animal" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="breed" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="text" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="animal_time" type="DATETIME(6)">
    <constraints nullable="true" />
   </column>
  </createTable>
  <createIndex tableName="animal" indexName="IDX_ANIMAL_DATE_TIME">
   <column name="animal_time"/>
  </createIndex>
 </changeSet>


 <changeSet id="user-table" author="skanash">
  <preConditions>
   <not>
    <tableExists tableName="app_user"/>
   </not>
  </preConditions>
  <createTable tableName="app_user">
   <column name="id" type="BIGINT" autoIncrement="true">
    <constraints primaryKey="true" />
   </column>
   <column name="chat_id" type="BIGINT">
    <constraints nullable="true" />
   </column>
   <column name="name" type="varchar(255)">
    <constraints nullable="false"/>
   </column>
   <column name="family" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="position" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="telephone_number" type="int">
    <constraints nullable="true" />
   </column>
   <column name="email" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="user_time" type="DATETIME(6)">
    <constraints nullable="true" />
   </column>
  </createTable>

  <createIndex tableName="app_user" indexName="IDX_USER_DATE_TIME">
   <column name="user_time"/>
  </createIndex>
 </changeSet>


</databaseChangeLog>
