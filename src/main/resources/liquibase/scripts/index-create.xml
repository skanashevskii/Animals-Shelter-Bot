<?xml version="1.0" encoding="UTF-8"?>
 <databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

 <!--ANIMAL TABLE-->
 <changeSet id="animal-table" author="skanash">
  <preConditions>
   <not>
    <tableExists tableName="animal"/>
   </not>
  </preConditions>
  <createTable tableName="animal">
   <column name="id" type="BIGINT" autoIncrement="true">
    <constraints primaryKey="true" />
   </column>
   <column name="name" type="varchar(255)">
    <constraints nullable="false"/>
   </column>
   <column name="type_animal" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="breed" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="text" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="animal_time" type="DATETIME(6)">
    <constraints nullable="true" />
   </column>
  </createTable>
  <createIndex tableName="animal" indexName="IDX_ANIMAL_DATE_TIME">
   <column name="animal_time"/>
  </createIndex>
 </changeSet>

 <!--USER TABLE-->
 <changeSet id="user-table" author="skanash">
  <preConditions>
   <not>
    <tableExists tableName="app_user"/>
   </not>
  </preConditions>
  <createTable tableName="app_user">
   <column name="id" type="BIGINT" autoIncrement="true">
    <constraints primaryKey="true" />
   </column>
   <column name="chat_id" type="BIGINT">
    <constraints nullable="true" />
   </column>
   <column name="name" type="varchar(255)">
    <constraints nullable="false"/>
   </column>
   <column name="family" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="position" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="telephone_number" type="int">
    <constraints nullable="true" />
   </column>
   <column name="email" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="accessLevel" type="varchar(255)">
    <constraints nullable="true" />
   </column>
   <column name="user_time" type="DATETIME(6)">
    <constraints nullable="true" />
   </column>
  </createTable>

  <createIndex tableName="app_user" indexName="IDX_USER_DATE_TIME">
   <column name="user_time"/>
  </createIndex>
 </changeSet>

 <!--SHELTER TABLE-->
 <changeSet id="shelter-table" author="skanash">
  <preConditions>
   <not>
    <tableExists tableName="shelter"/>
   </not>
  </preConditions>
  <createTable tableName="shelter">
   <column name="id" type="BIGINT" autoIncrement="true">
    <constraints primaryKey="true" />
   </column>
   <column name="name" type="varchar(255)">
    <constraints nullable="false"/>
   </column>
   <column name="shelter_time" type="DATETIME(6)">
    <constraints nullable="true" />
   </column>
  </createTable>

  <createIndex tableName="shelter" indexName="IDX_SHELTER_DATE_TIME">
   <column name="shelter_time"/>
  </createIndex>
 </changeSet>

 <!--SHELTER_LOCATION TABLE-->
 <changeSet id="shelterlocation-table" author="skanash">
  <preConditions>
   <not>
    <tableExists tableName="shelter_location"/>
   </not>
  </preConditions>
  <createTable tableName="shelter_location">
   <column name="id" type="BIGINT" autoIncrement="true">
    <constraints primaryKey="true" />
   </column>
   <column name="name" type="varchar(255)">
    <constraints nullable="false"/>
   </column>
   <column name="shelter_location_time" type="DATETIME(6)">
    <constraints nullable="true" />
   </column>
  </createTable>

  <createIndex tableName="shelter_location" indexName="IDX_SHELTER_LOCATION_DATE_TIME">
   <column name="shelter_location_time"/>
  </createIndex>
 </changeSet>

 <!--REPORT TABLE-->
 <changeSet id="report-table" author="skanash">
  <preConditions>
   <not>
    <tableExists tableName="reports"/>
   </not>
  </preConditions>
  <createTable tableName="reports">
   <column name="id" type="BIGINT" autoIncrement="true">
    <constraints primaryKey="true" />
   </column>
   <column name="report_date" type="DATETIME(6)">
    <constraints nullable="false"/>
   </column>
   <column name="file_path" type="varchar(255)">
    <constraints nullable="false"/>
   </column>
   <column name="access_level" type="varchar(255)">
    <constraints nullable="false"/>
   </column>
   <column name="report_time" type="DATETIME(6)">
    <constraints nullable="true" />
   </column>
  </createTable>

  <createIndex tableName="reports" indexName="IDX_REPORT_DATE_TIME">
   <column name="report_time"/>
  </createIndex>
 </changeSet>



</databaseChangeLog>
